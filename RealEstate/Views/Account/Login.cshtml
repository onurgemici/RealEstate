@model LoginViewModel
@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "Giriş Yap";
}


<form method="post" class="h-100">
    <div class="h-100 d-flex flex-column justify-content-center align-items-center">
        <div class="card shadow-sm" style="min-width: 24rem;">
            <div class="card-body">

       
                <div class="d-flex flex-column gap-3 justify-content-center align-items-center">
                    <h3>Kullanıcı Girişi</h3>
                </div>

                <div class="mb-3">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                    <label class="form-check-label" for="RememberMe">Oturum açık kalsın</label>
                </div>
                <hr />
                <div class="py-3 d-flex gap-3 justify-content-center">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Yeni Üyelik</a>
                    
                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="ResetPassword">Parolamı Unuttum</a>

                </div>
                @if (!ViewContext.ModelState.IsValid)
                {
                    <div class="alert alert-danger error-box" asp-validation-summary="All"></div>
                }
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Giriş Yap</button>

                </div>


            </div>

        </div>
        <div class="small py-3 text-light">
            @DateTime.Today.Year &copy; - Tüm hakları saklıdır. - Powered By MVCRealEstate&trade;
        </div>
        <div>
            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Anasayfaya Geri Dön</a>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}